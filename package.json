{
  "name": "@linkurious/lke-plugin-plugin-manager",
  "version": "0.0.1",
  "description": "Plugin Manager for Linkurious Enterprise",
  "main": "public/index.js",
  "homepage": "https://github.com/Linkurious/lke-plugin-plugin-manager#readme",
  "bugs": {
    "url": "https://github.com/Linkurious/lke-plugin-plugin-manager/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Linkurious/lke-plugin-plugin-manager.git"
  },
  "engines": {
    "node": "16.17.1"
  },
  "files": [
    "backend/**/**.js",
    "public/**.js",
    "public/**.html",
    "public/assets/**",
    "manifest.json"
  ],
  "license": "Apache 2",
  "author": "Linkurious",
  "scripts": {
    "artifact": "echo ${npm_package_name}-${npm_package_version}.lke | sed -e 's/@linkurious\\\///' -e 's/lke-plugin-//'",
    "prepare": "cd src/public 2> /dev/null && mkdir -p assets/css assets/js assets/img assets/fonts || true",
    "tsc": "tsc -b",
    "clean": "rm -rf dist lke.cookie",
    "mkdist": "mkdir -p dist/public dist/public/assets/css/libs dist/public/assets/js/libs",
    "copy-assets:main": "cp -R src/public/assets dist/public && cp src/public/index.html dist/public",
    "copy-assets": "npm-run-all -s mkdist -p copy-assets:*",
    "lint": "eslint --fix --ext .ts .",
    "build:manifest": "mkdir -p dist && cat src/manifest-template.json | envsubst > dist/manifest.json",
    "build:public": "esbuild src/public/index.ts --bundle --outfile=dist/public/index.js --target=es6",
    "postbuild:public": "npm run copy-assets > /dev/null",
    "build:backend": "tsc -b src/backend",
    "build:project": "npm-run-all -p build:manifest build:public build:backend",
    "build:dependencies": "cp package.json dist && cd dist && npm install --omit=dev --omit=optional > /dev/null",
    "build": "npm-run-all -s build:project build:dependencies",
    "postbuild": "cd dist && npm pack 2> /dev/null | xargs -I '{}' mv {} $(npm run --silent artifact)",
    "deploy:login": "curl -X POST ${npm_config_deploy_url}/api/auth/login --cookie-jar 'lke.cookie' -H 'Content-type: application/json' -d '{ \"usernameOrEmail\": \"'${npm_config_deploy_user}'\", \"password\": \"'${npm_config_deploy_pass}'\" }'",
    "deploy:logout": "curl -X GET ${npm_config_deploy_url}/api/auth/logout --cookie 'lke.cookie'  -H 'Content-type: application/json' && rm lke.cookie",
    "predeploy:restart-plugins": "npm run deploy:login",
    "deploy:restart-plugins": "curl -X POST ${npm_config_deploy_url}/api/admin/plugins/restart-all --cookie 'lke.cookie'",
    "postdeploy:restart-plugins": "npm run deploy:logout",
    "deploy": "cp dist/$(npm run --silent artifact) ${npm_config_deploy_plugin_folder}",
    "postdeploy": "npm run deploy:restart-plugins",
    "prebuild-deploy": "npm run build",
    "build-deploy": "npm run deploy",
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "upload": "gh release create \"v$(cat .version)\" $(npm run --silent artifact)",
    "bump:patch": "bump2version patch && npm version --no-git-tag-version patch",
    "bump:minor": "bump2version minor && npm version --no-git-tag-version minor",
    "bump:major": "bump2version major && npm version --no-git-tag-version major"
  },
  "devDependencies": {
    "@linkurious/rest-client": "3.1.12",
    "@types/express": "4.17.13",
    "@types/express-fileupload": "1.4.1",
    "@types/glob": "8.0.0",
    "@types/node": "18.11.9",
    "@types/superagent": "4.1.15",
    "@types/tar": "6.1.3",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "acorn": "8.8.1",
    "esbuild": "0.15.13",
    "eslint": "7.25.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "npm-run-all": "4.1.5",
    "typescript": "4.8.4",
    "ts-node": "10.9.1"
  },
  "dependencies": {
    "express": "4.17.3",
    "express-async-handler": "1.2.0",
    "express-fileupload": "1.4.0",
    "glob": "8.0.3",
    "tar": "6.1.12"
  },
  "bundleDependencies": [
    "express",
    "express-async-handler",
    "express-fileupload",
    "glob",
    "tar"
  ]
}
